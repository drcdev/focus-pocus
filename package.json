{
  "name": "focus-pocus",
  "version": "1.0.0",
  "description": "Production-ready MCP server connecting Claude Desktop to OmniFocus with comprehensive task management, natural language date parsing, and intelligent automation",
  "main": "dist/index.js",
  "bin": {
    "focus-pocus": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-scripts",
    "copy-scripts": "mkdir -p dist/omnifocus/scripts && cp src/omnifocus/scripts/*.jxa dist/omnifocus/scripts/",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "install:claude": "./install.sh",
    "validate": "./validate-config.sh"
  },
  "keywords": [
    "omnifocus",
    "mcp",
    "model-context-protocol",
    "claude-desktop",
    "productivity",
    "task-management",
    "automation",
    "macos",
    "jxa"
  ],
  "author": "Focus Pocus Contributors",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/drcdev/focus-pocus.git"
  },
  "bugs": {
    "url": "https://github.com/drcdev/focus-pocus/issues"
  },
  "homepage": "https://github.com/drcdev/focus-pocus#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}